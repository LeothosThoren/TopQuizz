<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCORES"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold|italic"

            android:textColor="@color/colorPrimary"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/activity_score_result1_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="First score"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_score_result2_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Second score"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_score_result3_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Third score"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_score_result4_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Fourth score"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/activity_score_result5_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Fifth score"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/activity_score_sortName_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:background="@color/colorPrimary"
            android:padding="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="Trier par prÃ©nom"
            android:textColor="#fff" />

        <Button
            android:id="@+id/activity_score_sortScore_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:background="@color/colorPrimary"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:text="Trier par scores"
            android:textColor="#fff" />

    </RelativeLayout>


</LinearLayout>
